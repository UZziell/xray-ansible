version: '3.9'
services:
  xui:
    image: {{ xui_image }}
    # container_name: x-ui
    volumes:
      - {{ xui_data_dir }}/db/:/etc/x-ui/
      - {{ xui_data_dir }}/certs/:/etc/x-ui/certs/
     # - {{ xui_data_dir }}/certs/:/etc/ssl/certs/
    restart: unless-stopped
    # network_mode: host
    ports:
      - 80:80
      - 443:443
      - 334:334
      - 2095:2095
      - 2053:2053
      - 1443:1443
      - 8443:8443
      - {{ xui_port }}:{{ xui_port }}

  nginx:
    image: {{ nginx_image }}
    volumes:
      - {{ xui_project_dir }}/nginx.conf:/etc/nginx/conf.d/default.conf
      - {{ xui_project_dir }}/decoy.html:/usr/share/nginx/html/index.html
